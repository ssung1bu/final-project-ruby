<% @links.each do |link| %>
    <h4><%= link_to link.title, link %><br>
      Submitted <%= time_ago_in_words(link.created_at) %> 
      by <%= link.user.email %>
    </h4>

    <%= link_to like_link_path(link), method: :put do %>
        Like
        <%= link.get_upvotes.size %>
    <% end %>

    <%= link_to dislike_link_path(link), method: :put do %>
        Dislike
        <%= link.get_downvotes.size %>
    <% end %>
<% end %>