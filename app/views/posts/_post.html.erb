<p>
	<%= link_to(post.user.email) %>
	<%= post.created_at.strftime("%B %d, %Y %l:%M%P") %>
	
</p>
<p><%= image_tag(post.avatar.url(:medium)) %></p>
<p>
    <% if current_user.liked?(post) %>
        <%= button_to('Dislike', dislike_post_path(post), method: :put) %>
      <% else %>
        <%= button_to('Like', like_post_path(post), method: :put) %>
      <% end %>
</p>

<p><%= link_to like_post_path(post), method: :put do %>
  Upvote
  <%= post.get_upvotes.size %>
<% end %>
</p>
<p>
<%= link_to dislike_post_path(post), method: :put do %>
  Downvote
  <%= post.get_downvotes.size %>
<% end %>
</p>
<p><%= post.text %> 
  <% if post.user == current_user %>
    <%= edit_post_link(post) %>
    <%= link_to('Delete', post, method: :delete) %>
  <% end %>

