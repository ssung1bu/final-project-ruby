
<ul>
  <% @users.each do |user| %>
    <li>
      
      <div id='follow'>  
      <%= link_to(user.email, user) %>
      
      <% if current_user.follows?(user) %>
        <p>
        <%= button_to('Unfollow', follow_path(user.id), method: :delete) %>
        </p>
      
      <% else %>
        <p>
        <%= button_to('Follow', follows_path(id: user), method: :create) %>
      </p>
      <% end %>
    </p>  
    </li>
  <% end %>
</ul>
</div>